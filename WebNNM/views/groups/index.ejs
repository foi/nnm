<form action="/new/group" role="form" name="add_group_form" id="add_group" method="POST" class="navbar-form navbar-left">
  <div class="form-group">
    <input type="text" class="form-control single-text" name="group_name" placeholder="Название группы">
  </div>
  <button type="submit" class="btn btn-default">Добавить</button>
</form>

<table class="table group_table">
  <thead>
  	<tr>
  		<th>Название</th>
  		<th>X?</th>
  	</tr>
  </thead>
  <tbody>
	<% groups.forEach(function(g){ %>
		<tr id="<%= g.id %>">
      <td>
        <div id="name" class="edit-name-of-group" data-type="text" data-pk="<%= g.id %>" data-url="/edit/groups" data-title="Введите имя группы"><%= g.name %></div>
      </td>
      <td>
        <span class="delete delete-group" id="<%= g.id %>">X</span>
      </td>
    </tr>
	<% }) %>
	</tbody>
</table>